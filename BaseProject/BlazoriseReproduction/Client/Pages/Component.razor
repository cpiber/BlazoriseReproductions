<Validation Validator="@Validate">
  <Field>
    <TextEdit Text="@Val" TextChanged="@ValChanged" />
  </Field>
</Validation>

@code {
  [Parameter]
  public string Val { get; set; }
  [Parameter]
  public EventCallback<string> ValChanged { get; set; }
  
  private void Validate(ValidatorEventArgs args)
  {
    args.Status = args.Value is string strVal && strVal.Length % 5 == 0 ? ValidationStatus.Error : ValidationStatus.Success;
  }
}